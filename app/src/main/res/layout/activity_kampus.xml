<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KampusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            app:srcCompat="@drawable/pnp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36sp"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Limau Manih, Padang, Sumbar"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="60sp"
            android:layout_marginRight="60sp"
            android:backgroundTint="#FF9800"
            android:text="Manajemen Informatika" />

        <Button
            android:id="@+id/btnTekom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="12sp"
            android:layout_marginRight="60sp"
            android:backgroundTint="#FF9800"
            android:text="Teknik Komputer" />

        <Button
            android:id="@+id/btnGaleri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginTop="12sp"
            android:layout_marginRight="60sp"
            android:backgroundTint="#FF9800"
            android:text="Galeri Foto" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>